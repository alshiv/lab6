<Window x:Class="minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Start" Margin="0,10,233,0" Click="Button_Click" Height="32" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
        <UniformGrid Name="pole" Margin="0,55,0,0"/>
        <TextBox x:Name="tb1" HorizontalAlignment="Left" Height="19" Margin="10,10,0,0" TextWrapping="Wrap" Text="rows" VerticalAlignment="Top" Width="53"/>
        <TextBox x:Name="tb2" HorizontalAlignment="Left" Height="19" Margin="68,10,0,0" TextWrapping="Wrap" Text="columns" VerticalAlignment="Top" Width="57"/>
        <TextBox x:Name="tb3" HorizontalAlignment="Left" Height="19" Margin="130,10,0,0" TextWrapping="Wrap" Text="mines" VerticalAlignment="Top" Width="66"/>
        <Button x:Name="Load" Content="Load" HorizontalAlignment="Left" Margin="345,9,0,0" VerticalAlignment="Top" Width="75" Click="Load_Click"/>
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="432,9,0,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>
    </Grid>
</Window>
